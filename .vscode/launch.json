{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Meteor: Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Meteor: Node",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["run", "debug"],
            "outputCapture": "std",
            "port": 9229,
            "timeout": 60000
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Server attach",
            "restart": true,
            "port": 9229
        }
    ],
    "compounds": [
        {
            "name": "Meteor: All",
            "configurations": ["Meteor: Node", "Meteor: Chrome"]
        },
        {
            "name": "Lauch chrome and attach to server",
            "configurations": ["Server attach", "Meteor: Chrome"]
        }
    ]
}